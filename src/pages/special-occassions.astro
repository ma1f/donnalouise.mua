---
import Page from "../layouts/page.astro";

let title = "Donna Louise - IMA Certified Makeup Artist";
let description = "Makeup Artist situated in Southam, Warwickshire, West Midlands, England, UK";
let url = "/special-occassions";
---
<Page title={title} description={description} url={url}>
  <div class="flex container gap row col-sm gutter align-items-center">
    <div class="cell-3">
      <h1>Special Occassions.</h1>
      <p>Bespoke makeup for any event or occassion, tailored to your individual style.</p>
      <h3>Pricing</h3>
      <dl class="pricing gutter">
        <dt>Prom</dt>
        <dd>£40 <span class="subtext">each</span></dd>
        <dt>Special Occassion</dt>
        <dd>£60 <span class="subtext">each</span></dd>
        <dt>Creative</dt>
        <dd>£70 <span class="subtext">each</span></dd>
      </dl>
    </div>
    <div class="cell-2">
      <img src="/photos/20210702_124420-512.jpg" 
        srcset="/photos/20210702_124420-1024.jpg 1024w, /photos/20210702_124420-1536.jpg 1536w"
        alt="" 
        data-description="" />
    </div>
  </div>

  <div class="flex container gap row col-sm pad">
    <div class="cell">
      <blockquote>“Amazing, Perfect makeup that lasted all day and into the night - highly recommend!”</blockquote>
      <figcaption>Rachel Williams</figcaption>
    </div>
  </div>
</Page>